<form class="{{cssClass}} {{item.type}}" autocomplete="off">
  <header class="items-header">
    <img
      class="item-img"
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
    />
    <div class="header-fields">
      <h1 class="item-name">
        <input
          name="name"
          type="text"
          value="{{item.name}}"
          placeholder="{{localize 'WASTELANDERS.Item.Name'}}"
        />
      </h1>
      <div class="brief-info flexrow">
        <div class="prop">
          <label class="prop-label" for="system.hpBonus">{{localize
              "WASTELANDERS.Actor.Character.Settings.HPBonus"
            }}:</label>
          {{numberInput system.hpBonus name="system.hpBonus" step=1}}
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Body }}
  <section class="sheet-body">
    <hr />
    {{editor
      enrichedDescription
      target="system.description"
      rollData=rollData
      button=true
      engine="prosemirror"
      editable=editable
      collaborate=true
    }}
  </section>

</form>