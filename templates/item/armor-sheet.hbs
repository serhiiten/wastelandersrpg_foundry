<form class="{{cssClass}} {{item.type}}" autocomplete="off">
  <header class="items-header">
    <img
      class="item-img"
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
    />
    <div class="header-fields">
      <h1 class="item-name">
        <input
          name="name"
          type="text"
          value="{{item.name}}"
          placeholder="{{localize 'WASTELANDERS.Item.Name'}}"
        />
      </h1>
      <div class="brief-info">
        <div class="prop">
          <label class="prop-label" for="system.protection">{{localize
              "WASTELANDERS.Item.Protection"
            }}:</label>
          {{numberInput
            system.protection
            name="system.protection"
            step=1
            min=0
          }}
        </div>
        <div class="prop">
          <label class="prop-label" for="system.price">{{localize
              "WASTELANDERS.Item.Price"
            }}:</label>
          {{numberInput system.price name="system.price" step=1 min=0}}
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Body }}
  <section class="sheet-body">
    <hr />
    {{editor
      enrichedDescription
      target="system.description"
      rollData=rollData
      button=true
      engine="prosemirror"
      editable=editable
      collaborate=true
    }}
  </section>

</form>