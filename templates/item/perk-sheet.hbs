<form class="{{cssClass}} {{item.type}}" autocomplete="off">
  <header class="items-header">
    <img
      class="item-img"
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
    />
    <div class="header-fields">
      <h1 class="item-name">
        <input
          name="name"
          type="text"
          value="{{item.name}}"
          placeholder="{{localize 'WASTELANDERS.Item.Name'}}"
        />
      </h1>
      <div class="brief-info">
        <div class="prop flex-centration">
          <label class="prop-label" for="system.active">{{localize
              "WASTELANDERS.Item.IsActive"
            }}:</label>
          <input
            class="prop-input"
            type="checkbox"
            name="system.active"
            {{checked system.active}}
          />
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs flexrow" data-group="primary">
    <a class="item" data-tab="general">{{localize 'WASTELANDERS.Description'}}</a>
    <a class="item" data-tab="requirements">{{localize 'WASTELANDERS.Item.Requirements'}}</a>
  </nav>

  {{! Sheet Body }}
  <section class="sheet-body">
    <div class="tab general" data-group="primary" data-tab="general">
      {{editor
        enrichedDescription
        target="system.description"
        rollData=rollData
        button=true
        engine="prosemirror"
        editable=editable
        collaborate=true
      }}
    </div>

    <div class="tab requirements" data-group="primary" data-tab="requirements">
      <div class="grid-2col">
        {{> "systems/wastelanders/templates/actor/parts/attributes.hbs"}}
        {{> "systems/wastelanders/templates/actor/parts/skills.hbs"}}
      </div>
    </div>

  </section>

</form>
