<div class="items-block">

  <div class="item-header">
    <a class="item-create" title="{{localize 'WASTELANDERS.Item.Add'}}" data-type="upgrade"><i class="fas fa-plus"></i></a>
    <h2>{{localize 'WASTELANDERS.Actor.Caravan.Upgrades'}}</h2>
    <p class="subheader">{{localize 'WASTELANDERS.Actor.Caravan.UpgradesTips'}}</p>
  </div>

  <ol class="items-list check-list">
    {{#each upgrades as |item id|}}
      <li class="item {{item.type}} {{#if item.system.active}}active{{/if}}" data-item-id="{{item._id}}">
        <div class="item-description flex-centration">
          <div
            class="multiple-activation value-step-block"
            data-value="{{item.system.active.value}}"
            data-key="system.active.value"
          >
            {{#numLoop system.active.max}}
              <span class="value-step value-dot" data-index="{{this}}"></span>
            {{/numLoop}}
          </div>

          <span class="item-name">{{item.name}}</span>
        </div>

        <div class="item-summary">
          {{{item.system.description}}}
        </div>

        <div class="item-controls">
          <a class="item-control item-show" title="{{localize 'WASTELANDERS.Item.Show'}}"><i class="fa fa-comment"></i></a>
          <a class="item-control item-edit" title="{{localize 'WASTELANDERS.Item.Edit'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize 'WASTELANDERS.Item.Delete'}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>
