<div class="grid-2col">
  <div class="epx-block">
    <div class="experience">
      <label for="system.exp.value">{{localize
          "WASTELANDERS.Actor.Character.Experience.Short"
        }}:</label>
      {{numberInput
        system.exp.value
        name="system.exp.value"
        class="clear-input"
        step=1
        min=0
      }}
    </div>

    <h2>{{localize "WASTELANDERS.Actor.Character.Experience.Gains"}}</h2>
    <ul>
      <li>{{localize
          "WASTELANDERS.Actor.Character.Experience.GainFailure"
        }}</li>
      <li>{{localize
          "WASTELANDERS.Actor.Character.Experience.GainGroupQuestions"
        }}</li>
      <li>{{localize
          "WASTELANDERS.Actor.Character.Experience.GainPersonalQuestions"
        }}</li>
      <li>{{localize "WASTELANDERS.Actor.Character.Experience.GainRest"}}</li>
    </ul>

    <h2>{{localize "WASTELANDERS.Actor.Character.Experience.Consumption"}}</h2>
    <table class="exp-options">

      <thead>
        <tr>
          <th>{{localize "WASTELANDERS.Actor.Character.Experience.Upgrade"}}</th>
          <th>{{localize "WASTELANDERS.Actor.Character.Experience.Price"}}</th>
          <th>{{localize "WASTELANDERS.Actor.Character.Experience.Checked"}}</th>
        </tr>
      </thead>

      <tbody>
        {{#each system.exp.options}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td class="value-step-block multiple-activation" data-value="{{this.active}}" data-array-index="{{@index}}">
              {{#numLoop this.max}}
                <span class="value-step value-dot" data-index="{{this}}"></span>
              {{/numLoop}}
            </td>
          </tr>
        {{/each}}
      </tbody>

    </table>

  </div>
  <div>
    <h2>{{localize "WASTELANDERS.Description"}}</h2>
    {{editor
      enrichedDescription
      target="system.description"
      button=true
      owner=owner
      editable=editable
    }}

    <h2>{{localize "WASTELANDERS.Notes"}}</h2>
    {{editor
      enrichedNotes
      target="system.notes"
      button=true
      owner=owner
      editable=editable
    }}
  </div>
</div>
