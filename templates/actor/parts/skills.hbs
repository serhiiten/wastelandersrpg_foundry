<div class="skills-block">
  <h2>{{localize "WASTELANDERS.Actor.Character.Skills"}}</h2>
  {{#each system.skills as |skill key|}}
    <div class="skill">
      <label
        class="skill-label rollable"
        for="system.skills.{{key}}"
        data-type="check"
        data-note="{{key}}"
      >
        {{getLocalize "WASTELANDERS.Actor.Character.Skill." key}}
      </label>
      <select class="clear-select" name="system.skills.{{key}}">
        {{selectOptions @root.config.skillLevels selected=skill localize=true}}
      </select>
    </div>
  {{/each}}
</div>