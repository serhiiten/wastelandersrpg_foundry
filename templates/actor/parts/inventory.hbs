<h2>
  <label class="prop-label" for="system.supplies">{{localize
      "WASTELANDERS.Actor.Character.Supplies"
    }}:</label>
  {{numberInput
    system.supplies
    name="system.supplies"
    class="clear-input"
    step=1
    min=0
    max=50
  }}
</h2>
<h2>
  <label class="prop-label" for="system.caps">{{localize
      "WASTELANDERS.Actor.Character.Caps"
    }}:</label>
  {{numberInput
    system.caps
    name="system.caps"
    class="clear-input"
    step=1
    min=0
    max=50
  }}
</h2>

<div>
  <div class="items-block">

    <div class="item-header">
      <a
        class="item-create"
        title="{{localize 'WASTELANDERS.Item.Add'}}"
        data-type="weapon"
      ><i class="fas fa-plus"></i></a>
      <h2>{{localize "WASTELANDERS.Actor.Character.Weapons"}}</h2>
    </div>

    <ol class="items-list">
      {{#each weapons as |item id|}}
        <li class="item {{item.type}}" data-item-id="{{item._id}}">
          <div class="item-description flexrow">
            <a class="item-image rollable" data-type="weapon" data-note="{{item._id}}" style="background-image: url({{item.img}})"></a>
            <span class="item-name">{{item.name}}</span>
            {{#if item.system.damage}}
              <span class="item-damage">({{item.system.damage}})</span>
            {{/if}}
          </div>

          <div class="item-summary">
            {{#if item.system.price}}
              <b><label class="prop-label" for="system.price">{{localize
                    "WASTELANDERS.Item.Price"
                  }}:</label></b>
              <span class="item-price">{{item.system.price}}</span>
            {{/if}}
            {{{item.system.description}}}
          </div>

          <div class="item-controls">
            <a
              class="item-control item-show"
              title="{{localize 'WASTELANDERS.Item.Show'}}"
            ><i class="fa fa-comment"></i></a>
            <a
              class="item-control item-edit"
              title="{{localize 'WASTELANDERS.Item.Edit'}}"
            ><i class="fas fa-edit"></i></a>
            <a
              class="item-control item-delete"
              title="{{localize 'WASTELANDERS.Item.Delete'}}"
            ><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

  <div class="items-block">

    <div class="item-header">
      <a
        class="item-create"
        title="{{localize 'WASTELANDERS.Item.Add'}}"
        data-type="armor"
      ><i class="fas fa-plus"></i></a>
      <h2>{{localize "WASTELANDERS.Actor.Character.Armors"}}</h2>
    </div>

    <ol class="items-list">
      {{#each armors as |item id|}}
        <li class="item {{item.type}}" data-item-id="{{item._id}}">
          <div class="item-description">
            <span class="item-name">{{item.name}}</span>
            {{#if item.system.protection}}
              <span class="item-protection">({{item.system.protection}})</span>
            {{/if}}
          </div>

          <div class="item-summary">
            {{#if item.system.price}}
              <b><label class="prop-label" for="system.price">{{localize
                    "WASTELANDERS.Item.Price"
                  }}:</label></b>
              <span class="item-price">{{item.system.price}}</span>
            {{/if}}
            {{{item.system.description}}}
          </div>

          <div class="item-controls">
            <a
              class="item-control item-show"
              title="{{localize 'WASTELANDERS.Item.Show'}}"
            ><i class="fa fa-comment"></i></a>
            <a
              class="item-control item-edit"
              title="{{localize 'WASTELANDERS.Item.Edit'}}"
            ><i class="fas fa-edit"></i></a>
            <a
              class="item-control item-delete"
              title="{{localize 'WASTELANDERS.Item.Delete'}}"
            ><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>
</div>

