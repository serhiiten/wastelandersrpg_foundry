<form class="{{cssClass}} {{actor.type}}" autocomplete="off">
  {{! Sheet Header }}
  <header class="sheet-header">
    <div class="img-block">

      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>

      <div class="hp-bar">
        <div class="hp-bar-fill" style="width: {{hpBarWidth system.hp}};"></div>
        <div class="hp-values">
          {{numberInput system.hp.value name="system.hp.value" class="hp-input clear-input" step=1 min=0}}
          <span class="hp-separator">/</span>
          {{numberInput system.hp.max name="system.hp.max" class="hp-input clear-input" step=1 min=0}}
        </div>
      </div>

    </div>

    <div class="header-fields">
      <h1><input class="character-name clear-input" name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'WASTELANDERS.Actor.Enemy.Name'}}"/></h1>

      <div class="brief-info">
        <div class="prop">
          <label class="prop-label" for="system.armor">{{localize 'WASTELANDERS.Actor.Enemy.Armor'}}:</label>
          <input class="clear-input" name="system.armor" type="text" value="{{system.armor}}"/>
        </div>
      </div>

    </div>
  </header>

  {{! Sheet Body }}
  <section class="sheet-body">
    <div class="general-container">
      <hr />
      {{editor
        enrichedDescription
        target="system.description"
        rollData=rollData
        button=true
        engine="prosemirror"
        editable=editable
        collaborate=true
      }}
    </div>
  </section>
</form>
